%h1 Listing favorites

%table
  %thead
    %tr
      %th User
      %th Book
      %th
      %th
      %th

  %tbody
    - @favorites.each do |favorite|
      %tr
        %td= favorite.user_id
        %td= favorite.book_id
        %td= link_to 'Show', favorite
        %td= link_to 'Edit', edit_favorite_path(favorite)
